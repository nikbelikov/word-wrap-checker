{
  "manifest_version": 3,
  "name": "Word Wrap Checker",
  "version": "2.4.0",
  "description": "This extension helps you check HTML blocks for issues with long words, phrases, or oversized images.",
  "permissions": ["activeTab", "scripting", "storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Word Wrap Checker",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
